<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/content_parent"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_bg_color">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/_5sdp"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
                        android:fontFamily="@font/bodoniflf_roman"
            android:id="@+id/tv_withdrawal_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/_5sdp"
            android:text="Abhijit Ghadage"
            android:textColor="@color/app_txt_color_black1"
            android:textSize="16sp" />

        <TextView
                        android:fontFamily="@font/bodoniflf_roman"
            android:id="@+id/tv_withdrawal_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/_5sdp"
            android:text="abhijitjghadage@gmail.com"
            android:textColor="@color/app_txt_color_black2"
            android:textSize="16sp" />

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@color/app_cardView_white"
            app:cardCornerRadius="4dp"
            app:cardElevation="5dp"
            app:cardMaxElevation="1dp"
            app:cardPreventCornerOverlap="true"
            app:cardUseCompatPadding="true">

             <EditText
                        android:fontFamily="@font/bodoniflf_roman"
                android:id="@+id/edit_withdrawal_no"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:hint="Number"
                android:inputType="number"
                android:maxLength="10"
                android:padding="@dimen/_15sdp"
                android:textColor="@color/app_txt_color_black1"
                android:textColorHint="@color/app_txt_color_black3" />

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@color/app_cardView_white"
            app:cardCornerRadius="4dp"
            app:cardElevation="5dp"
            app:cardMaxElevation="1dp"
            app:cardPreventCornerOverlap="true"
            app:cardUseCompatPadding="true">

             <EditText
                        android:fontFamily="@font/bodoniflf_roman"
                android:id="@+id/edit_withdrawal_amt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:hint="Amount"
                android:inputType="number"
                android:maxLength="3"
                android:padding="@dimen/_15sdp"
                android:textColor="@color/app_txt_color_black1"
                android:textColorHint="@color/app_txt_color_black3" />

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@color/app_cardView_white"
            app:cardCornerRadius="4dp"
            app:cardElevation="5dp"
            app:cardMaxElevation="1dp"
            app:cardPreventCornerOverlap="true"
            app:cardUseCompatPadding="true">

             <EditText
                        android:fontFamily="@font/bodoniflf_roman"
                android:id="@+id/edit_withdrawal_message"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:gravity="left|top"
                android:hint="Remark (Optional)"
                android:inputType="textMultiLine"
                android:lines="4"
                android:padding="@dimen/_15sdp"
                android:textColor="@color/app_txt_color_black1"
                android:textColorHint="@color/app_txt_color_black3" />

        </androidx.cardview.widget.CardView>

        <androidx.appcompat.widget.AppCompatButton
                android:fontFamily="@font/bodoniflf_roman"
            android:id="@+id/btn_withdrawal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_40sdp"
            android:layout_marginTop="@dimen/_25sdp"
            android:layout_marginEnd="@dimen/_40sdp"
            android:background="@drawable/shape_btn"

            android:text="Submit"
            android:textAllCaps="true"
            android:textColor="@color/app_txt_btn_color_white"
            android:textSize="@dimen/app_btn_txt_size" />

        <TextView
                        android:fontFamily="@font/bodoniflf_roman"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_25sdp"
            android:letterSpacing="0.03"
            android:padding="@dimen/_10sdp"
            android:text="Note : Send request cash withdrawal Amount"
            android:textColor="@color/colorWhite"
            android:textSize="16sp" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>