<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/content_parent"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginTop="@dimen/_40sdp"
            android:layout_marginBottom="@dimen/_40sdp"
            android:background="#FFF"
            android:orientation="vertical"
            android:paddingTop="@dimen/_5sdp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:orientation="horizontal">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                        android:id="@+id/circle_profile_image"
                        android:layout_width="@dimen/_70sdp"
                        android:layout_height="@dimen/_70sdp"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:src="@drawable/profile_male"
                        app:civ_border_color="#FF000000"
                        app:civ_border_width="1dp" />

                    <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                        android:id="@+id/circle_edit_profile"
                        android:layout_width="@dimen/_30sdp"
                        android:layout_height="@dimen/_30sdp"
                        android:layout_marginStart="@dimen/_50sdp"
                        android:src="@drawable/ic_vector_edit"
                        app:civ_border_color="#000"
                        app:civ_border_width="1dp" />

                </RelativeLayout>

                <TextView
                    android:id="@+id/tv_user_profile_name"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginStart="@dimen/_15sdp"
                    android:fontFamily="@font/bodoniflf_roman"
                    android:gravity="center"
                    android:text="Abhijit Ghadage"
                    android:textColor="@color/app_txt_color_black">

                </TextView>

                <LinearLayout
                    android:id="@+id/ll_add_points"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="end"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_total_coins"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:fontFamily="@font/bodoniflf_roman"
                        android:text="000 points"
                        android:textStyle="bold"
                        android:textColor="@color/app_txt_color_black"
                        android:textSize="@dimen/_12sdp">

                    </TextView>

                    <ImageView
                        android:layout_width="@dimen/_40sdp"
                        android:layout_height="@dimen/_40sdp"
                        android:padding="@dimen/_5sdp"
                        android:src="@drawable/coins" />

                </LinearLayout>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                android:background="@color/app_view_color" />

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_50sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginEnd="@dimen/_50sdp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/ll_btn_basic_profile"
                        android:padding="@dimen/_3sdp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/shape_btn_setting"
                        android:gravity="center_vertical">

                        <ImageView
                            android:layout_marginStart="@dimen/_40sdp"
                            android:layout_width="@dimen/_40sdp"
                            android:layout_height="@dimen/_40sdp"
                            android:src="@drawable/seting_profile" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_20sdp"
                            android:fontFamily="@font/bodoniflf_roman"
                            android:text="Basic Profile"
                            android:textAllCaps="false"
                            android:textColor="@color/app_txt_color_white" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_btn_point_add"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:padding="@dimen/_3sdp"
                        android:background="@drawable/shape_btn_setting"
                        android:gravity="center_vertical">

                        <ImageView
                            android:layout_marginStart="@dimen/_40sdp"
                            android:layout_width="@dimen/_40sdp"
                            android:layout_height="@dimen/_40sdp"
                            android:src="@drawable/setting_coins" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_20sdp"
                            android:fontFamily="@font/bodoniflf_roman"
                            android:text="Add Point"
                            android:textAllCaps="false"
                            android:textColor="@color/app_txt_color_white" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_btn_gallery_image"
                        android:padding="@dimen/_3sdp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:background="@drawable/shape_btn_setting"
                        android:gravity="center_vertical">

                        <ImageView
                            android:layout_marginStart="@dimen/_40sdp"
                            android:layout_width="@dimen/_40sdp"
                            android:layout_height="@dimen/_40sdp"
                            android:src="@drawable/setting_image" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_20sdp"
                            android:fontFamily="@font/bodoniflf_roman"
                            android:text="Image Gallery"
                            android:textAllCaps="false"
                            android:textColor="@color/app_txt_color_white" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_btn_gallery_video"
                        android:padding="@dimen/_3sdp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:background="@drawable/shape_btn_setting"
                        android:gravity="center_vertical">

                        <ImageView
                            android:layout_marginStart="@dimen/_40sdp"
                            android:layout_width="@dimen/_40sdp"
                            android:layout_height="@dimen/_40sdp"
                            android:src="@drawable/setting_video" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_20sdp"
                            android:fontFamily="@font/bodoniflf_roman"
                            android:text="Video Gallery"
                            android:textAllCaps="false"
                            android:textColor="@color/app_txt_color_white" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_btn_setting"
                        android:padding="@dimen/_3sdp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:background="@drawable/shape_btn_setting"
                        android:gravity="center_vertical">

                        <ImageView
                            android:layout_marginStart="@dimen/_40sdp"
                            android:layout_width="@dimen/_40sdp"
                            android:layout_height="@dimen/_40sdp"
                            android:src="@drawable/setting_setting" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_20sdp"
                            android:fontFamily="@font/bodoniflf_roman"
                            android:text="Settings"
                            android:textAllCaps="false"
                            android:textColor="@color/app_txt_color_white" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_btn_change_pass"
                        android:padding="@dimen/_3sdp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:background="@drawable/shape_btn_setting"
                        android:gravity="center_vertical">

                        <ImageView
                            android:layout_marginStart="@dimen/_40sdp"
                            android:layout_width="@dimen/_40sdp"
                            android:layout_height="@dimen/_40sdp"
                            android:src="@drawable/setting_changepassword" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_20sdp"
                            android:fontFamily="@font/bodoniflf_roman"
                            android:text="Change Password"
                            android:textAllCaps="false"
                            android:textColor="@color/app_txt_color_white" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_btn_feedback"
                        android:padding="@dimen/_3sdp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:background="@drawable/shape_btn_setting"
                        android:gravity="center_vertical">

                        <ImageView
                            android:layout_marginStart="@dimen/_40sdp"
                            android:layout_width="@dimen/_40sdp"
                            android:layout_height="@dimen/_40sdp"
                            android:src="@drawable/setting_support" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_20sdp"
                            android:fontFamily="@font/bodoniflf_roman"
                            android:text="Support / Feedback"
                            android:textAllCaps="false"
                            android:textColor="@color/app_txt_color_white" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_btn_logout"
                        android:padding="@dimen/_3sdp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:background="@drawable/shape_btn_setting"
                        android:gravity="center_vertical">

                        <ImageView
                            android:layout_marginStart="@dimen/_40sdp"
                            android:layout_width="@dimen/_40sdp"
                            android:layout_height="@dimen/_40sdp"
                            android:src="@drawable/setting_logout" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_20sdp"
                            android:fontFamily="@font/bodoniflf_roman"
                            android:text="Logout"
                            android:textAllCaps="false"
                            android:textColor="@color/app_txt_color_white" />
                    </LinearLayout>

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/btn_social_profile"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:background="@drawable/shape_btn_rec"
                        android:fontFamily="@font/bodoniflf_roman"
                        android:text="Social Profile"
                        android:textAllCaps="false"
                        android:textColor="@color/app_txt_color_white"
                        android:visibility="gone" />

                </LinearLayout>

            </ScrollView>

        </LinearLayout>

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>