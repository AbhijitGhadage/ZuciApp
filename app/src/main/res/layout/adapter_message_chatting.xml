<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rl_receiver_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/_100sdp">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_5sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginBottom="@dimen/_5sdp"
            android:background="@drawable/shape_btn"
            android:padding="@dimen/_10sdp">

            <TextView
                android:id="@+id/tv_receiver_message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_marginStart="@dimen/_5sdp"
                android:fontFamily="@font/bodoniflf_roman"
                android:text="NA"
                android:textColor="@color/app_txt_color_white" />

            <TextView
                android:layout_below="@id/tv_receiver_message"
                android:id="@+id/tv_receiver_message_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="@dimen/_5sdp"
                android:fontFamily="@font/bodoniflf_roman"
                android:text="NA"
                android:textColor="@color/app_txt_color_white" />

        </RelativeLayout>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_sender_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_100sdp">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginEnd="@dimen/_5sdp"
            android:layout_marginBottom="@dimen/_5sdp"
            android:background="@drawable/shape_btn_white"
            android:padding="@dimen/_10sdp">

            <TextView
                android:id="@+id/tv_sender_message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_5sdp"
                android:fontFamily="@font/bodoniflf_roman"
                android:text="NA"
                android:textColor="@color/app_txt_color_black" />

            <TextView
                android:layout_above="@+id/tv_sender_message"
                android:id="@+id/tv_sender_message_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_5sdp"
                android:fontFamily="@font/bodoniflf_roman"
                android:text="NA"
                android:textColor="@color/app_txt_color_black" />

        </RelativeLayout>

    </RelativeLayout>

</LinearLayout>