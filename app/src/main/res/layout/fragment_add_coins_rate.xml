<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/content_parent"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_bg_color">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5sdp"
                android:orientation="vertical"
                android:paddingStart="@dimen/_40sdp"
                android:paddingEnd="@dimen/_40sdp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_toStartOf="@+id/tv_liveCall"
                            app:cardBackgroundColor="@color/app_cardView_white"
                            app:cardCornerRadius="4dp"
                            app:cardElevation="5dp"
                            app:cardMaxElevation="1dp"
                            app:cardPreventCornerOverlap="true"
                            app:cardUseCompatPadding="true">

                            <LinearLayout
                                android:id="@+id/ll_rate_live_Call"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:padding="@dimen/_10sdp">

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:layout_weight="5"
                                    android:fontFamily="@font/bodoniflf_roman"
                                    android:gravity="center_horizontal"
                                    android:text="Live Call"
                                    android:textColor="@color/app_txt_color_black1" />

                                <View
                                    android:layout_width="@dimen/_2sdp"
                                    android:layout_height="match_parent"
                                    android:background="@color/app_view_color" />

                                <EditText
                                    android:id="@+id/edit_rate_live_Call"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_marginStart="@dimen/_20sdp"
                                    android:layout_weight="5"
                                    android:background="@null"
                                    android:fontFamily="@font/bodoniflf_roman"
                                    android:hint="0"
                                    android:imeOptions="actionNext"
                                    android:inputType="number"
                                    android:textColor="@color/app_txt_color_black1"
                                    android:textColorHint="@color/app_txt_color_black3" />
                            </LinearLayout>

                        </androidx.cardview.widget.CardView>

                        <TextView
                            android:id="@+id/tv_liveCall"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="@dimen/_5sdp"
                            android:fontFamily="@font/bodoniflf_roman"
                            android:text="Per minutes"
                            android:textColor="@color/app_txt_color_black1" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_toStartOf="@+id/tv_audioCall"
                            app:cardBackgroundColor="@color/app_cardView_white"
                            app:cardCornerRadius="4dp"
                            app:cardElevation="5dp"
                            app:cardMaxElevation="1dp"
                            app:cardPreventCornerOverlap="true"
                            app:cardUseCompatPadding="true">

                            <LinearLayout
                                android:id="@+id/ll_rate_audio_Call"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:padding="@dimen/_10sdp">

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:layout_weight="5"
                                    android:fontFamily="@font/bodoniflf_roman"
                                    android:gravity="center_horizontal"
                                    android:text="Audio Call"
                                    android:textColor="@color/app_txt_color_black1" />

                                <View
                                    android:layout_width="@dimen/_2sdp"
                                    android:layout_height="match_parent"
                                    android:background="@color/app_view_color" />


                                <EditText
                                    android:id="@+id/edit_rate_audio_Call"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_marginStart="@dimen/_20sdp"
                                    android:layout_weight="5"
                                    android:background="@null"
                                    android:fontFamily="@font/bodoniflf_roman"
                                    android:hint="0"
                                    android:imeOptions="actionNext"
                                    android:inputType="number"
                                    android:textColor="@color/app_txt_color_black1"
                                    android:textColorHint="@color/app_txt_color_black3" />
                            </LinearLayout>

                        </androidx.cardview.widget.CardView>

                        <TextView
                            android:id="@+id/tv_audioCall"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="@dimen/_5sdp"
                            android:fontFamily="@font/bodoniflf_roman"
                            android:text="Per minutes"
                            android:textColor="@color/app_txt_color_black1" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_toStartOf="@+id/tv_videoCall"
                            app:cardBackgroundColor="@color/app_cardView_white"
                            app:cardCornerRadius="4dp"
                            app:cardElevation="5dp"
                            app:cardMaxElevation="1dp"
                            app:cardPreventCornerOverlap="true"
                            app:cardUseCompatPadding="true">

                            <LinearLayout
                                android:id="@+id/ll_rate_video_Call"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:padding="@dimen/_10sdp">

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:layout_weight="5"
                                    android:fontFamily="@font/bodoniflf_roman"
                                    android:gravity="center_horizontal"
                                    android:text="Video Call"
                                    android:textColor="@color/app_txt_color_black1" />

                                <View
                                    android:layout_width="@dimen/_2sdp"
                                    android:layout_height="match_parent"
                                    android:background="@color/app_view_color" />


                                <EditText
                                    android:id="@+id/edit_rate_video_Call"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_marginStart="@dimen/_20sdp"
                                    android:layout_weight="5"
                                    android:background="@null"
                                    android:fontFamily="@font/bodoniflf_roman"
                                    android:hint="0"
                                    android:imeOptions="actionNext"
                                    android:inputType="number"
                                    android:textColor="@color/app_txt_color_black1"
                                    android:textColorHint="@color/app_txt_color_black3" />
                            </LinearLayout>

                        </androidx.cardview.widget.CardView>

                        <TextView
                            android:id="@+id/tv_videoCall"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="@dimen/_5sdp"
                            android:fontFamily="@font/bodoniflf_roman"
                            android:text="Per minutes"
                            android:textColor="@color/app_txt_color_black1" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:visibility="gone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_toStartOf="@+id/tv_img"
                            app:cardBackgroundColor="@color/app_cardView_white"
                            app:cardCornerRadius="4dp"
                            app:cardElevation="5dp"
                            app:cardMaxElevation="1dp"
                            app:cardPreventCornerOverlap="true"
                            app:cardUseCompatPadding="true">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:padding="@dimen/_10sdp">

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:layout_weight="5"
                                    android:fontFamily="@font/bodoniflf_roman"
                                    android:gravity="center_horizontal"
                                    android:text="Images"
                                    android:textColor="@color/app_txt_color_black1" />

                                <View
                                    android:layout_width="@dimen/_2sdp"
                                    android:layout_height="match_parent"
                                    android:background="@color/app_view_color" />


                                <EditText
                                    android:id="@+id/edit_rate_image"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_marginStart="@dimen/_20sdp"
                                    android:layout_weight="5"
                                    android:background="@null"
                                    android:fontFamily="@font/bodoniflf_roman"
                                    android:hint="0"
                                    android:imeOptions="actionNext"
                                    android:inputType="number"
                                    android:textColor="@color/app_txt_color_black1"
                                    android:textColorHint="@color/app_txt_color_black3" />
                            </LinearLayout>

                        </androidx.cardview.widget.CardView>

                        <TextView
                            android:id="@+id/tv_img"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="@dimen/_5sdp"
                            android:fontFamily="@font/bodoniflf_roman"
                            android:text="Default"
                            android:textColor="@color/app_txt_color_black1" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:visibility="gone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_toStartOf="@+id/tv_video"
                            app:cardBackgroundColor="@color/app_cardView_white"
                            app:cardCornerRadius="4dp"
                            app:cardElevation="5dp"
                            app:cardMaxElevation="1dp"
                            app:cardPreventCornerOverlap="true"
                            app:cardUseCompatPadding="true">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:padding="@dimen/_10sdp">

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:layout_weight="5"
                                    android:fontFamily="@font/bodoniflf_roman"
                                    android:gravity="center_horizontal"
                                    android:text="Videos"
                                    android:textColor="@color/app_txt_color_black1" />

                                <View
                                    android:layout_width="@dimen/_2sdp"
                                    android:layout_height="match_parent"
                                    android:background="@color/app_view_color" />


                                <EditText
                                    android:id="@+id/edit_rate_video"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_marginStart="@dimen/_20sdp"
                                    android:layout_weight="5"
                                    android:background="@null"
                                    android:fontFamily="@font/bodoniflf_roman"
                                    android:hint="0"
                                    android:imeOptions="actionDone"
                                    android:inputType="number"
                                    android:textColor="@color/app_txt_color_black1"
                                    android:textColorHint="@color/app_txt_color_black3" />
                            </LinearLayout>

                        </androidx.cardview.widget.CardView>

                        <TextView
                            android:id="@+id/tv_video"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="@dimen/_5sdp"
                            android:fontFamily="@font/bodoniflf_roman"
                            android:text="Default"
                            android:textColor="@color/app_txt_color_black1" />

                    </RelativeLayout>

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/btn_save_rate"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_30sdp"
                        android:layout_marginTop="@dimen/_25sdp"
                        android:layout_marginEnd="@dimen/_30sdp"
                        android:background="@drawable/shape_btn"
                        android:fontFamily="@font/bodoniflf_roman"
                        android:text="Save"
                        android:textAllCaps="true"
                        android:textColor="@color/app_txt_btn_color_white"
                        android:textSize="@dimen/app_btn_txt_size" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_15sdp"
                    android:layout_marginBottom="@dimen/_70sdp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/bodoniflf_roman"
                        android:text="Note: "
                        android:textColor="@color/app_txt_color_black1"
                        android:textSize="17sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/bodoniflf_roman"
                        android:text="You will receive 50% of the set amount in your wallet."
                        android:textColor="@color/app_txt_color_black2"
                        android:textSize="15sp" />

                </LinearLayout>

            </LinearLayout>

        </ScrollView>

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>